{
  "name": "sales-intelligence-mcp-server",
  "version": "1.1.0",
  "description": "MCP server for unified sales intelligence â€” Gong call analytics, ZoomInfo enrichment, Clay data enrichment, and LinkedIn prospect research",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "sales-intelligence-mcp-server": "dist/index.js"
  },
  "scripts": {
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "clean": "rm -rf dist coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "npm run lint && npm run typecheck && npm run test && npm run build"
